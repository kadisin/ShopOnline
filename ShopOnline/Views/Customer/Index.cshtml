@model IEnumerable<Customer>
<h2>Bikes</h2>
<hr />

@if (TempData["CustomerDeleted"] != null)
{
    <p class="text-success">@TempData["CustomerDeleted"]</p>
}

@if (!Model.Any())
{
    <p>No results</p>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Shipping Address
            </th>
            <th>
                City
            </th>
            <th>Actions</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.Name</td>
                <td>@customer.ShippingAddress</td>
                <td>@customer.City</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@customer.CustomerId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.CustomerId">Delete</a>
                </td>
            </tr>
        }
    </table>
}

<p>
    <a class="btn btn-primary" asp-action="Add">Add New Customer</a>
</p>